<head>
  <title>Admin's Page {{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet" />

  <!-- Css Styles -->
  <link rel="stylesheet" href="../css/bootstrap.min.css" type="text/css" />
  <link rel="stylesheet" href="../css/font-awesome.min.css" type="text/css" />
  <link rel="stylesheet" href="../css/elegant-icons.css" type="text/css" />
  <link rel="stylesheet" href="../css/nice-select.css" type="text/css" />
  <link rel="stylesheet" href="../css/jquery-ui.min.css" type="text/css" />
  <link rel="stylesheet" href="../css/owl.carousel.min.css" type="text/css" />
  <link rel="stylesheet" href="../css/slicknav.min.css" type="text/css" />
  <link rel="stylesheet" href="../css/style.css" type="text/css" />


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <style>
    .flex-column {
      border-style: solid;
      border-color: #77B4E3;
      border-width:
        1px;
    }

    .overflow-auto {
      border-style: solid;
      height: 600px;
      border-color: #77B4E3;
      border-width:
        1px;
    }
  </style>

</head>

<body>
  <div class="container">
    <div class="row" style="margin-top:20px;  ">
      <div class="col-11">
        <div class="mt-4" style="text-align: center;">
          <h3>Quản lí tài khoản</h3>
        </div>
        <nav class="nav nav-pills nav-justified">
          <a class="nav-link active" href="/accounts/account-manager?type=admin">Admin</a>
          <a class="nav-link" href="/accounts/account-manager?type=customer">Customer</a>
         
        </nav>
        <div class="overflow-auto">
          <div class="book-information" data-spy="scroll">

            <table class="table table-success table-striped table-bordered ">
              <thead style="position: sticky; top: 0; z-index: 1; ">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Tài khoản</th>
                  <th scope="col">Mật khẩu</th>
                  <th scope="col">Loại tài khoản</th>
                  <th scope="col">Ngày kích hoạt</th>
                </tr>
              </thead>
              <tbody>
                   {{#each accounts}}
                   {{#if type}}
                <tr>
                  <th scope="col">{{this.MANV}}</th>
                  <th scope="col">{{this.USER}}</th>
                  <th scope="col">{{this.PASS}}</th>
                  <th scope="col">{{this.LOAINV}}</th>
                  <th scope="col">10/11/2021</th>
                </tr>

                {{else}}
                <tr>
                  <th scope="col">{{this.MAKH}}</th>
                  <th scope="col">{{this.USER}}</th>
                  <th scope="col">{{this.PASS}}</th>
                  <th scope="col">CUSTOMER</th>
                  <th scope="col">10/11/2021</th>
                </tr>

                {{/if}}
                
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-1">
        {{#if type}}
        <div class="btn-group-vertical" style="padding-top:70px;">
          <button type="button" class="btn btn-outline-danger">
            <span>Thêm</span>
            </span>
          </button>
          <button type="button" class="btn btn-outline-success">
            <span>Xóa
            </span>
            </span>
          </button>
          <button type="button" class="btn btn-outline-warning">
            <span>Sửa</span>
            </span>
          </button>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</body>