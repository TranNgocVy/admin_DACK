  <style>
    .flex-column {
      border-style: solid;
      border-color: #77B4E3;
      border-width:
        1px;
    }

    .overflow-auto {
      border-style: solid;
      height: 600px;
      border-color: #77B4E3;
      border-width:
        1px;
    }
  </style>

</head>

<body>
  <div class="container">
    <div class="row" style="margin-top:20px;  ">
      <div class="col-11">
        <div class="mt-4" style="text-align: center;">
          <h3>Quản lí tài khoản</h3>
        </div>
        <nav class="nav nav-pills nav-justified mt-4">

          {{!-- <div class='container'>
            <div class='row'>
              <div class='col-md-3 col-md-6'>
                <a class="nav-link" style="background-color: aqua; "
                  href="/accounts/account-manager?type=admin">Admin</a>
              </div>
              <div class='col-md-3 col-md-6'>
                <a class="nav-link" href="/accounts/account-manager?type=customer">Customer</a>

              </div>
            </div>
          </div> --}}
          {{#if admin}}
          <a class="nav-link" style="background-color: aqua;" href="/accounts/account-manager?type=admin"
            id="adminTab">Admin</a>
          <a class="nav-link" href="/accounts/account-manager?type=customer" id="customerTab">Customer</a>
          {{else}}
          <a class="nav-link"  href="/accounts/account-manager?type=admin"
            id="adminTab">Admin</a>
          <a class="nav-link" style="background-color: aqua;" href="/accounts/account-manager?type=customer" id="customerTab">Customer</a>
          {{/if}}



        </nav>
        <div class="overflow-auto">
          <div class="book-information" data-spy="scroll">

            <table class="table table-success table-striped table-bordered ">
              <thead style="position: sticky; top: 0; z-index: 1; ">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Tài khoản</th>
                  <th scope="col">Email</th>
                  <th scope="col">Loại tài khoản</th>
                  <th scope="col">Ngày kích hoạt</th>
                </tr>
              </thead>
              <tbody>
                {{#if admin}}
                {{#each accounts}}

                <tr>

                  <th scope="col">{{this.MANV}}</th>
                  <th scope="col">{{this.USER}}</th>
                  <th scope="col">{{this.EMAIL}}</th>
                  <th scope="col">ADM</th>
                  <th scope="col">10/11/2021</th>
                </tr>


                {{!-- <tr>
                  <th scope="col">{{this.MAKH}}</th>
                  <th scope="col">{{this.USER}}</th>
                  <th scope="col">{{this.EMAIL}}</th>
                  <th scope="col">CUSTOMER</th>
                  <th scope="col">10/11/2021</th>
                </tr> --}}
                {{/each}}
                {{else}}

                {{#each accounts}}
                <tr>
                  <th scope="col">{{this.MAKH}}</th>
                  <th scope="col">{{this.USER}}</th>
                  <th scope="col">{{this.EMAIL}}</th>
                  <th scope="col">CUSTOMER</th>
                  <th scope="col">10/11/2021</th>
                </tr>
                {{/each}}
                {{/if}}


              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-1">
        {{#if admin}}
        <div class="btn-group-vertical" style="padding-top:70px;">
          <a href="/accounts/add">
            <button type="button" class="btn btn-outline-danger">
              <span>Thêm</span>
              </span>
            </button>
          </a>
          <button type="button" class="btn btn-outline-success">
            <span>Xóa
            </span>
            </span>
          </button>
          <button type="button" class="btn btn-outline-warning">
            <span>Sửa</span>
            </span>
          </button>
        </div>
        {{/if}}
      </div>
    </div>
  </div>

</body>