<head>
  <title>Admin's Page {{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet" />

  <!-- Css Styles -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css" />
  <link rel="stylesheet" href="/css/nice-select.css" type="text/css" />
  <link rel="stylesheet" href="/css/jquery-ui.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/style.css" type="text/css" />

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <style>
    .flex-column {
      border-style: solid;
      border-color: #77B4E3;
      border-width:
        1px;
    }

    th,
    td {
      font-size: 1rem;
      font-family: Arial, Helvetica, sans-serif;
    }
  </style>

</head>

<body>
  <div class="container">

    <div class="row" style="margin-top:20px;  ">

      <div class="col">
        <div class="mt-4">
          <div class="text-center">
            <H3>Hóa đơn Thanh Toán</H3>
          </div>

          <form class="form-inline my-2 my-lg-0 mt-5">
            <input class="form-control mr-sm-2" type="search" name ="receiptId" placeholder="Tìm mã hóa đơn" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Tìm</button>
          </form>

          <a href="#" class="mt-4 btn btn-link" style="float: right;">
            Thùng rác
          </a>
          <div>
            <table class="table table-striped mt-4">
              <thead>
                <tr>
                  <th scope="col">STT</th>
                  <th scope="col">Mã hóa đơn</th>
                  <th scope="col">Tên khách hàng</th>
                  <th scope="col">Địa chỉ</th>
                  <th scope="col">Số điện thoại</th>
                  <th scope="col">Thời gian</th>
                  <th scope="col" colspan="2"> Lựa Chọn </th>
                </tr>
              </thead>
              <tbody>
                {{#each receipt}}
                <tr>
                  <th scope="row">{{sum @index 1}}</th>
                  <td>
                    <a href="/receipts/receipt-detail/{{this.this.MAPM}}" class="btn-link">{{this.MAPM}}</a>
                  </td>
                  <td>{{this.MAKH_khachhang.HOTEN}}</td>
                  <td>{{this.MAKH_khachhang.DIACHI}}</td>
                  <td>{{this.MAKH_khachhang.SDT}}</td>
                  <td>{{this.NGAYMUA}}</td>
                  <td>
                    <a href="#" class="btn-link" style = "padding-right: 10px;">Sửa</a>
                    <a href="#" class="btn-link">Xóa</a>
                  </td>
                </tr>
                {{else}}
                <tr>
                  <td colspan="7" class="text-center">
                    Danh sách trống
                  </td>
                </tr>
                {{/each}}
               
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>