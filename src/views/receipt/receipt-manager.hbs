<body>
  <div class="container">

    <div class="row" style="margin-top:20px;  ">

      <div class="col">
        <div class="mt-4">
          <div class="text-center">
            <H3>Hóa đơn Thanh Toán</H3>
          </div>

          <form class="form-inline my-2 my-lg-0 mt-5">
            <input class="form-control mr-sm-2" type="search" name ="search" placeholder="Tìm mã hóa đơn hoặc tên khách hàng" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Tìm</button>
          </form>
          <div>
            <table class="table table-striped mt-4">
              <thead>
                <tr>
                  <th scope="col">STT</th>
                  <th scope="col">Mã hóa đơn</th>
                  <th scope="col">Tên khách hàng</th>
                  <th scope="col">Địa chỉ</th>
                  <th scope="col">Số điện thoại</th>
                  <th scope="col">Thời gian</th>
                </tr>
              </thead>
              <tbody>
                {{#each receipt}}
                <tr>
                  <th scope="row">{{ sum (sum @index (mul 24 ../current)) 1}}</th>
                  <td>
                    <a href="/receipts/receipt-detail/{{this.MAPM}}" class="btn-link">{{this.MAPM}}</a>
                  </td>
                  <td>{{this.HOTEN}}</td>
                  <td>{{this.DIACHI}}</td>
                  <td>{{this.SDT}}</td>
                  <td>{{this.NGAYMUA}}</td>

                </tr>
                {{else}}
                <tr>
                  <td colspan="7" class="text-center">
                    Danh sách trống
                  </td>
                </tr>
                {{/each}}
               
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center" >
      <nav aria-label="Page navigation example">
        <ul class="pagination" id="pagination">
          <li class="page-item"><a class="page-link" href="#">1</a></li>
