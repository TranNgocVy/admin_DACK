
  <form action="/books/TL/{{masach}}/store" method="POST">
    <h3>Gắn thể loại cho truyện</h3>
    <div class="mt-4 row">
        {{#each Theloai}}
    <div class="form-check col-sm-3">
      <input class="form-check-input" type="checkbox" name="category" value="{{this.maTL}}" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
      {{this.tenTL}}
      </label>
    </div>
    {{/each}}
    </div>
    
    <button type="submit" class="btn btn-primary btn-md">
      Xác Nhận
    </button>
  </form>
