<div class="mt-4">
    <h3>Thêm truyện mới</h3>
    <a href="/books/book-manager" class="mt-3 btn btn-link alert-danger">Quay lại</a>
    <form method="post" action="/books/book-manager">
        <div class="form-group mt-3">
            <label for="name">Tên truyện</label>
            <input type="text" class="form-control" id="name" name="tensach" placeholder="Nhập tên truyện">
        </div>
        <div class="form-group mt-3">
            <label for="des">Hình thức truyện</label>
            <select class="form-select" aria-label="Theloai" name="hinhthuc">
                <option value="TT">Truyện Tranh</option>
                <option value="TC">Truyện chữ </option>
            </select>
        </div>
        <div class="form-group mt-3">
            <label for="des">Tác giả</label>
            <input type="text" class="form-control" id="des" name="tacgia" placeholder="Nhập tên tác giả">
        </div>
        <div class="form-group mt-3">
            <label for="videoId">Link ảnh</label>
            <input type="text" class="form-control" id="Images" name="HINHANH" placeholder="Nhập link hình ảnh">
        </div>
        <div class="form-group mt-3">
            <label for="NXB">Nhà xuất bản</label>
            <select class="form-control" id="NXB" name="manxb">
                {{#each NXB}}
                <option value="{{this.manxb}}">{{this.Ten}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group mt-3">
            <label for="NgayXB">Ngày xuất bản</label>
            <input type="date" class="form-control" id="NgayXB" name="ngayXB" placeholder="Enter publication date">
        </div>
        <div class="form-group mt-3">
            <label for="price">Giá</label>
            <input type="number" min="0.00" max="10000000.00" step="1000.00" class="form-control" id="price" name="gia"
                placeholder="Nhập giá truyện">
        </div>
        <div class="form-group mt-3">
            <label for="des">Mô tả</label>
            <textarea class="form-control" cols="86" rows="10" placeholder="Mô tả truyện" name="MOTA"
                id="des"></textarea>
        </div>



        <button type="submit" class="btn btn-primary mt-4">Thêm truyện mới</button>
    </form>
</div>