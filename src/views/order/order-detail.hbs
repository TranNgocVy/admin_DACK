<body>
    <div class="container">
        <div class="mt-4">
            <div class="text-center">
                <h3>Chi tiết đơn nhập</h3>
            </div>
            <div>
                <div class=" mt-5 col-4">
                    <label for="validationCustom01" class="form-label">Nhà Xuất Bản</label>
                    <input type="text" class="form-control" id="publisher" readonly
                        value='{{order.MANXB_nxb.Ten}}'>
                </div>
                <div class="col-md-4 mt-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" readonly value='{{order.MANXB_nxb.email}}'>
                </div>
                <div class="col-md-4 mt-3">
                    <label for="phone" class="form-label">Số điện thoại </label>
                    <input type="text" class="form-control" id="phone" readonly value='{{order.MANXB_nxb.std}}'>
                </div>
                <div class="col-6 mt-3">
                    <label for="address" class="form-label">Điện chỉ</label>
                    <input type="text" class="form-control" id="address" placeholder="1234 Main St" readonly
                        value='{{order.MANXB_nxb.diachi}}'>
                </div>
                <div class="col-4 mt-3">
                    <label for="date" class="form-label">Ngày nhập</label>
                    <input type="text" class="form-control" id="date" placeholder="dd/mm/yyyy" readonly
                        value='{{order.NGAYNHAP}}'>
                </div>
            </div>

            {{!-- <div class="mt-5">
                <h6> Nhà xuất bản : <b>{{order.MANXB_nxb.Ten}}</b> </h6>
            </div>
            <div class="mt-1">
                <h6> Sđt : <b>{{order.MANXB_nxb.std}}</b> </h6>
            </div>
            <div class="mt-1">
                <h6> Địa chỉ : <b>{{order.MANXB_nxb.diachi}}</b> </h6>
            </div>
            <div class="mt-1">
                <h6> Thời gian : <b>{{order.NGAYNHAP}}</b> </h6>
            </div> --}}

            <!-- Thêm dùm link đến đơn nhập hàng -->

            <br>
            <table id="cart" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th style="width:50%">Tên sản phẩm</th>
                        <th style="width:15%">Giá</th>
                        <th style="width:15%">Số lượng</th>
                        <th style="width:20%">Thành tiền</th>
                        {{!-- <th style="width:10%"> </th> --}}
                    </tr>
                </thead>
                <tbody>
                    {{#each detailOrder}}
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-lg-3 hidden-xs">
                                    <img src="{{this.MASACH_sach.HINHANH}}" alt="Sản phẩm 1" class="img-responsive"
                                        width="100">
                                </div>
                                <div class="col-sm-9 ">
                                    <h4 class="nomargin">{{this.MASACH_sach.tensach}}</h4>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price">{{this.MASACH_sach.gia}} đ</td>
                        <td data-th="Quantity">{{this.SL}}</td>
                        <td data-th="Subtotal">{{totalMoney this.MASACH_sach.gia this.SL}} đ</td>
                        </td>
                        {{!-- <td class="actions" data-th="">
                            <button class="btn btn-success btn-sm"><i class="fa fa-trash-o">duyệt</i>
                            </button>
                        </td> --}}
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="7" class="text-center">
                            Danh sách trống
                        </td>
                    </tr>
                    {{/each}}


                </tbody>
                <tfoot>
                    <tr>

                        <td colspan="2" class="hidden-xs"> </td>

                        <td class="hidden-xs text-start"><strong>Tổng tiền: </strong></td>
                        <td class="hidden-xs text-start">
                            <strong>{{totalMoneyForReceiptOrOrder detailOrder}} đ</strong>
                        </td>

                        {{!-- <td class="text-end"> Đã Thanh toán <i class="fa fa-angle-right"></i>
                        </td> --}}
                    </tr>
                    <tr>
                        <td>
                            <a href="/orders/order-manager" class="btn btn-success">
                                <i class="fa fa-angle-left"></i>TrởLại
                            </a>
                        </td>
                         <td colspan="2">
                        </td>
                        <td colspan="2">
                            <b>NV. {{order.MANV_nhanvien.HOTEN}}</b>
                        </td>
                    </tr>

                </tfoot>
            </table>


        </div>

    </div>

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
