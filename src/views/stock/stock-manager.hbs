        </ul>
      </nav>
    </div>
  </div>

  <script>
    function getBooks() {
      const date = document.getElementById('month').value;
      document.getElementById('submitMonth').submit();
    }
    mainUri="/stocks/stock-manager/page/"; 


  generatePagination({{total}},{{current}}+1,mainUri);

